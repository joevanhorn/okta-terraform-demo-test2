{
  "entitlements": [
    {
      "id": "role_owner",
      "name": "Owner",
      "description": "Complete control over the application and all resources",
      "permissions": ["admin", "manage_users", "manage_settings", "view_all", "edit_all", "delete_all"]
    },
    {
      "id": "role_admin",
      "name": "Administrator",
      "description": "Administrative access with user management",
      "permissions": ["manage_users", "view_all", "edit_all", "view_analytics"]
    },
    {
      "id": "role_manager",
      "name": "Manager",
      "description": "Team management and reporting access",
      "permissions": ["view_team", "edit_team", "view_analytics", "approve_requests"]
    },
    {
      "id": "role_editor",
      "name": "Editor",
      "description": "Create and edit content",
      "permissions": ["view_content", "create_content", "edit_content", "delete_own_content"]
    },
    {
      "id": "role_contributor",
      "name": "Contributor",
      "description": "Create content but cannot edit others' work",
      "permissions": ["view_content", "create_content", "edit_own_content"]
    },
    {
      "id": "role_viewer",
      "name": "Viewer",
      "description": "Read-only access to application",
      "permissions": ["view_content", "view_analytics"]
    },
    {
      "id": "role_guest",
      "name": "Guest",
      "description": "Limited access to shared resources only",
      "permissions": ["view_shared"]
    }
  ]
}
